<div class="max-w-md mx-auto mt-10">
  <h2 class="text-xl font-bold mb-4">Add Contact</h2>
  <form action="/add-contact" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Name" class="w-full border p-2 rounded" required>
    <input type="text" name="phone" placeholder="Phone" class="w-full border p-2 rounded" required>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
  </form>
</div>

